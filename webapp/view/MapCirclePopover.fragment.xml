<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{sales>SALES_ORGANISATION}"
		class="sapUiContentPadding"
		placement="Bottom" >
		<endButton>
			<Button text="{i18n>gotoPredict}" tooltip="{i18n>gotoPredictTooltip}" icon="sap-icon://business-objects-experience" press="gotoPredict" />
		</endButton>
		<content>
			<VBox class="sapUiTinyMargin">
		        <Label text="{i18n>Period}" />
			    <Text text="{path: 'sales>MONTH', formatter: '.formatter.month'} {sales>YEAR}" />
			</VBox>
			<VBox class="sapUiTinyMargin">
		        <Label text="{i18n>Revenue}" />
			    <Text text="{path: 'sales>REVENUE', type:'sap.ui.model.type.Float', formatOptions : {   groupingEnabled: true, minFractionDigits: 2} }" />
			</VBox>
			<VBox class="sapUiTinyMargin">
		        <Label text="{i18n>SalesQuantity}" />
			    <Text text="{path: 'sales>SALES_QUANTITY', type:'sap.ui.model.type.Float', formatOptions : {   groupingEnabled: true, minFractionDigits: 2} }" />
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
