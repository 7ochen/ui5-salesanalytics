<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ResponsivePopover
		title="{sales2>tooltip}"
		class="sapUiContentPadding"
		placement="Bottom" >
		<endButton>
			<Button text="{i18n>gotoPredict}" tooltip="{i18n>gotoPredictTooltip}" icon="sap-icon://business-objects-experience" press="gotoPredict" data:salesorg="{sales2>SALES_ORGANISATION}" />
		</endButton>
		<content>
			<VBox class="sapUiTinyMargin">
		        <Label text="{i18n>Period}" />
			    <Text text="{path: 'sales2>MONTH', formatter: '.formatter.month'} {sales2>YEAR}" />
			</VBox>
			<VBox class="sapUiTinyMargin sapUiSmallMarginTop">
		        <Label text="{i18n>Revenue}" />
			    <FormattedText htmlText="&lt;strong&gt;{path: 'sales2>REVENUE', type:'sap.ui.model.type.Float' } {sales2>CURRENCY}&lt;/strong&gt;" />
			</VBox>
			<VBox class="sapUiTinyMargin sapUiSmallMarginTop">
		        <Label text="{i18n>RevenuePerItem}" />
    			<List items="{sales2>ProductGroups}" >
            		<StandardListItem class="noPadding"
            			title="{path: 'sales2>PRODUCT_GROUP', formatter: '.formatter.setEmptyText'}"
            			counter="{path: 'sales2>REVENUE', type:'sap.ui.model.type.Float' }"/>
            	</List>
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
